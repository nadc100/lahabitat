<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/nav_home">

    <fragment
        android:id="@+id/nav_home"
        android:name="org.fiap.lhabitat.ui.home.HomeFragment"
        android:label="@string/menu_home"
        tools:layout="@layout/fragment_home" />

    <fragment
        android:id="@+id/nav_gallery"
        android:name="org.fiap.lhabitat.ui.gallery.GalleryFragment"
        android:label="@string/menu_gallery"
        tools:layout="@layout/fragment_gallery" >
        <action
            android:id="@+id/nav_property"
            app:destination="@layout/fragment_property" />
    </fragment>

    <fragment
        android:id="@+id/nav_slideshow"
        android:name="org.fiap.lhabitat.ui.slideshow.SlideshowFragment"
        android:label="@string/menu_slideshow"
        tools:layout="@layout/fragment_slideshow" />
    <fragment
        android:id="@+id/nav_property"
        android:name="org.fiap.lhabitat.ui.gallery.PropertyFragment"
        android:label="fragment_property"
        tools:layout="@layout/fragment_property" />
    <fragment
        android:id="@+id/detailsFragment"
        android:name="org.fiap.lhabitat.ui.details.DetailsFragment"
        android:label="fragment_details"
        tools:layout="@layout/fragment_details" >
        <action
            android:id="@+id/action_detailsFragment_to_nav_property"
            app:destination="@id/nav_property" />
    </fragment>
</navigation>